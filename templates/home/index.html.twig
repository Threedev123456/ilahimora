{% extends 'base.html.twig' %}
{% block title %}{{prod.titre}}{% endblock %}
{% block content %}
<div style='margin-top:89px'>
        <div class="container">
            <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
                <button class="how-pos3 hov3 trans-04 js-hide-modal1">
                    <img src="{{ asset('assets/images/icons/icon-close.png') }}" alt="CLOSE">
                </button>

                <div class="row">
                            <div class="col-md-6 col-lg-7 p-b-30">
                                <div class="p-l-25 p-r-30 p-lr-0-lg">
                                    <div class="wrap-slick3 flex-sb flex-w">
                                        <div class="wrap-slick3-dots"></div>
                                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                                        <div class="slick3 gallery-lb">
                                            <div class="item-slick3" data-thumb="{{ asset('uploads/') }}{{ prod.image }}">
                                                <div class="wrap-pic-w pos-relative">
                                                    <img src="{{ asset('uploads/') }}{{ prod.image }}" alt="{{ prod.titre }}" style="height:342px">

                                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                                       href="{{ asset('uploads/') }}{{ prod.image }}">
                                                        <i class="fa fa-expand"></i>
                                                    </a>
                                                </div>
                                            </div>

                                            <div class="item-slick3" data-thumb="{{ asset('uploads/') }}{{ prod.image2 }}">
                                                <div class="wrap-pic-w pos-relative">
                                                    <img src="{{ asset('uploads/') }}{{ prod.image2 }}" alt="{{ prod.titre }}" style="height:342px">

                                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                                       href="{{ asset('uploads/') }}{{ prod.image2 }}">
                                                        <i class="fa fa-expand"></i>
                                                    </a>
                                                </div>
                                            </div>

                                            <div class="item-slick3" data-thumb="{{ asset('uploads/') }}{{ prod.image3 }}">
                                                <div class="wrap-pic-w pos-relative">
                                                    <img src="{{ asset('uploads/') }}{{ prod.image3 }}" alt="{{ prod.titre }}" style="height:342px">

                                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                                       href="{{ asset('uploads/') }}{{ prod.image3 }}">
                                                        <i class="fa fa-expand"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-5 p-b-30">
                                <div class="p-r-50 p-t-5 p-lr-0-lg">
                                    <div>
                                    {{ form_start(formul) }}
                                        <h4 class="mtext-105 cl2 txt-center p-b-30">
                                            FAIRE UN COMMANDE !
                                        </h4>
                                        <div class="bor8 m-b-20 how-pos4-parent">
                                            {{ form_widget(formul.nom,{'attr':{'class':'stext-111 cl2 plh3 size-116 p-l-62 p-r-30','placeholder':'Votre nom'}}) }}
                                            <img class="how-pos4 pointer-none" src="{{ asset('assets/images/icons/icon-user.png') }}"
                                                alt="ICON">
                                        </div>
                                        <div class="bor8 m-b-20 how-pos4-parent">
                                            {{ form_widget(formul.tel,{'attr':{'class':'stext-111 cl2 plh3 size-116 p-l-62 p-r-30','placeholder':'TÃ©l'}}) }}
                                            <img class="how-pos4 pointer-none" src="{{ asset('assets/images/icons/icon-phone.png') }}"
                                                alt="ICON">
                                        </div>

                                        <div class="bor8 m-b-20 how-pos4-parent">
                                            {{ form_widget(formul.email,{'attr':{'class':'stext-111 cl2 plh3 size-116 p-l-62 p-r-30','placeholder':'Email'}}) }}
                                            <img class="how-pos4 pointer-none" src="{{ asset('assets/images/icons/icon-email.png') }}"
                                                alt="ICON">
                                        </div>

                                        <div class="bor8 m-b-30">
                                            {{ form_widget(formul.message,{'attr':{'class':'stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25','placeholder':'Decriver ici votre commande.'}}) }}
                                        </div>
                                    {{ form_widget(formul.Envoyer,{'attr':{'class':'flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer','value':'Envoyer'  }}) }}
                                    {{ form_end(formul) }}
                                </div>

                                    <!--  -->
                                    <div class="flex-w flex-m p-l-100 p-t-40 respon7">
                                        <div class="flex-m bor9 p-r-10 m-r-11">
                                            <a href="#"
                                               class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100"
                                               data-tooltip="Add to Wishlist">
                                                <i class="zmdi zmdi-favorite"></i>
                                            </a>
                                        </div>

                                        <a href="https://web.facebook.com/meublemalamine" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100"
                                           data-tooltip="Facebook">
                                            <i class="fa fa-facebook"></i>
                                        </a>

                                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100"
                                           data-tooltip="Twitter">
                                            <i class="fa fa-twitter"></i>
                                        </a>

                                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100"
                                           data-tooltip="Google Plus">
                                            <i class="fa fa-google-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
